{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "PLang",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#values"
    },
    {
      "include": "#types"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#text"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.plang",
          "match": "\\b(proc|label|eqjump|neqjump|ltjump|gtjump|jump|call|exit|pop|push|add|sub|mul|div|mod|print|cast|dup|return)\\b"
        }
      ]
    },
    "values": {
      "patterns": [
        {
          "name": "constant.character.plang",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "text": {
      "patterns": [
        {
          "name": "comment.line.double-dash",
          "match": "\\b\\w+\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.plang",
          "match": "\\b(void|int|string)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.plang",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.plang",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "souce.p"
}
